@model Idea.Models.Submission

@{
    ViewData["Title"] = "Create";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <label asp-for="Name" class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Deadline_1" class="control-label">Deadline 1</label>
                <input asp-for="Deadline_1" class="form-control" type="date" />
                <span asp-validation-for="Deadline_1" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Deadline_2" class="control-label">Deadline 2</label>
                <input asp-for="Deadline_2" class="form-control" type="date" />
                <span asp-validation-for="Deadline_2" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
